# Set the source directory
srcdir = ../src/css/iPhone/

# Create the list of modules
modules = ../license.txt ${srcdir}wui.css ${srcdir}wui_controls_lists_items_arrow.css ${srcdir}wui_controls_lists_standard.css ${srcdir}wui_controls_lists_rounded.css ${srcdir}wui_controls_titleBar.css ${srcdir}wui_controls_toolBar.css ${srcdir}wui_controls_menu_menuItem.css ${srcdir}wui_controls_menu_menuBar.css ${srcdir}wui_controls_buttons_standard.css ${srcdir}wui_controls_buttons_red.css ${srcdir}wui_controls_buttons_add.css ${srcdir}wui_controls_buttons_back.css ${srcdir}wui_controls_buttons_greyLamp.css ${srcdir}wui_controls_buttons_greenLamp.css ${srcdir}wui_controls_buttons_orangeLamp.css ${srcdir}wui_controls_buttons_redLamp.css ${srcdir}wui_controls_progress.css

all: ${srcdir}wui_v0.1.css ${srcdir}wui_mini_v0.1.css

${srcdir}wui_v0.1.css: ${modules}
	cat > $@ $^
  
${srcdir}wui_mini_v0.1.css: ${srcdir}wui_v0.1.css
	java -jar yuicompressor-2.4.2.jar -o  $@ $^ --charset utf-8
	